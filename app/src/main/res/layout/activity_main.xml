<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="250dp"
          android:background="#960013">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Nguyễn Nhật Tân 21115053120244"
              android:textColor="@color/white"/>
         <ImageView
             android:layout_width="200dp"
             android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
             android:src="@drawable/logo"/>
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:layout_marginTop="30dp"
         android:layout_marginRight="63dp"
         android:layout_marginLeft="63dp"
          android:layout_gravity="center_horizontal"
          android:background="@color/white">
<!--         input email-->
         <EditText
             android:layout_width="250dp"
             android:layout_height="50dp"
            android:hint="Email"
            android:textColorHint="#960013"
            android:layout_toRightOf="@+id/iconemail"
            android:inputType="textEmailAddress"
            android:textSize="12sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:maxLines="1"/>
<!--      icon-->
         <ImageView
            android:id="@+id/iconemail"
             android:layout_width="30dp"
             android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/message"/>

      </RelativeLayout>
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_marginRight="63dp"
          android:layout_marginLeft="63dp"
          android:layout_gravity="center_horizontal"
          android:background="@color/white"
          >
         <!--         input password-->
         <EditText
             android:layout_width="250dp"
             android:layout_height="50dp"
             android:hint="Password"
             android:textColorHint="#960013"
             android:layout_toRightOf="@+id/iconlock"
             android:inputType="textPassword"
             android:textSize="12sp"
             android:paddingTop="15dp"
             android:paddingBottom="15dp"
             android:maxLines="1"/>
         <!--      icon-->
         <ImageView
             android:id="@+id/iconlock"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="5dp"
             android:src="@drawable/lock"/>


      </RelativeLayout>

       <TextView
           android:layout_width="270dp"
           android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
           android:layout_marginTop="25dp"
           android:layout_marginBottom="10dp"
           android:background="@drawable/blue_fill__rounded_color"
           android:paddingBottom="14dp"
           android:paddingTop="14dp"
           android:text="Log in"
           android:textColor="#ffffff"
           android:textSize="15sp"
           android:gravity="center"
           />
       <TextView
           android:id="@+id/txw_signup"
           android:layout_width="270dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="10dp"
           android:background="@drawable/blue_fill__rounded_color"
           android:paddingBottom="14dp"
           android:paddingTop="14dp"
           android:text="Sign up"
           android:textColor="#ffffff"
           android:textSize="15sp"
           android:gravity="center"
           android:onClick="OpenSignUp"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password ?"
            android:textSize="12sp"
            android:textColor="#960013"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="or"
                android:textColor="#960013"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/instagram"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/fb"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/twitter"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/linkedin"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>